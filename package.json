{
  "name": "plantuml-switcher",
  "displayName": "PlantUML Switcher",
  "description": "Switch PlantUML elements (relations, ...)",
  "version": "1.0.0",
  "publisher": "aiekick",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#008080",
    "theme": "dark"
  },
  "activationEvents": [
    "onCommand:plantuml-switcher.relation",
    "onCommand:plantuml-switcher.arrow-layout"
  ],
  "repository": {
    "url": "https://github.com/aiekick/plantuml-switcher.git"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "plantuml-switcher.relation",
        "title": "PlantUML: Switch Relation"
      },
      {
        "command": "plantuml-switcher.arrow-layout",
        "title": "PlantUML: Switch arrow-layout"
      }
    ],
    "keybindings": [
      {
        "command": "plantuml-switcher.relation",
        "key": "²",
        "when": "editorTextFocus"
      },
      {
        "command": "plantuml-switcher.arrow-layout",
        "key": "²",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
	"vsix": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  }
}
